{
  "name": "webpack-starter-kit",
  "version": "1.0.0",
  "description": "Un kit para iniciar proyectos frontend con ES6 y Webpack",
  "main": "./src/js/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "webpack -d --watch --colors",
    "prod": "webpack -p",
    "clean": "rimraf \"./public/*\"",
